
<div id="myModal" class="modal" tabindex="-1" role="dialog" style="background-color: white;height: 600px;width: 50%;margin-left: 25%;margin-top: 30px;">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" >Ã—</button>
    <h4 id="myModalLabel">Event Details</h4>
  </div>
  <div class="modal-body" style="">
    <%= simple_form_for(@event, :url => {:action => 'create_event', :method=> 'post'}) do |f|%>
      <%= f.error_notification %>
      <div class="form-inputs">
      <%= f.label :name %>
      <%= f.text_field :name, :required => "required", :class => "parsley-validated parsley-error input-block-level" %>
      <%= f.label :about %>
      <%= f.text_area :about, :required => "required", :class => "parsley-validated parsley-error input-block-level" %>
      <%= f.label :rules %>
      <%= f.text_area :rules, :required => "required", :class => "parsley-validated parsley-error input-block-level" %>
      <%= f.label :first_prize %>
      <%= f.text_field :first_prize_info, :required => "required", :class => "parsley-validated parsley-error input-block-level" %>
      <%= f.label :second_prize %>
      <%= f.text_field :second_prize_info, :class => "parsley-validated parsley-error input-block-level" %>
      <%= f.label :third_prize %>
      <%= f.text_field :third_prize_info, :class => "parsley-validated parsley-error input-block-level" %>
      <%= f.label :category %>
      <%= f.select(:category, options_for_select(['Music','Dance']), {}, { :class => 'input-block-level' }) %><br/>
      <%= f.label :audition_start_date_time%>
      <%= f.text_field :audition_start_datetime, :id => "datetimepicker"%>
      <%= f.label :audition_end_date_time%>
      <%= f.text_field :audition_end_datetime, :id => "datetimepicker1"%>
      <br/>
      <%= f.label :upload_cover_pic%>
      <%= f.file_field :cover_pic_url, :class=>"input-file"%>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" style="float:left;">Close</button>
      <div class="form-actions"><%= f.submit "Create", :class => "btn btn-primary"%></div>
    </div>
    <%end%>
  </div>
</div>
<script type="text/javascript">
  jQuery('#datetimepicker').datetimepicker();
  jQuery('#datetimepicker1').datetimepicker();
</script>  
