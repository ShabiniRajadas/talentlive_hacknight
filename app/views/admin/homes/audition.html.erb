<div class="container">

<h4 align="center">Event : <%= @event.name.upcase %></h4>
<div class="row">
    <%= image_tag @event.cover_pic_url ,:class => 'image_show_up' %>
</div>

<br><legend>Participants</legend><br>

<% if @users %>
  <% @users.each do |t| %>
    <div class="row">
      <div class="col-md-6">
        <%= t.name %>
      </div>
      <div class="col-md-6">
        <form onsubmit="postForm(); return false; ">
        <input type = "hidden" name = "gid" value = "1009023439918">
        <input type = "hidden" name = "hso" value = "0">
        <select name= "gd">
        <option><%= t.id %>@<%= @event.id%></option>
        </select>
        <input type="submit" value="Hangout"/>
        </form>
      </div>
    </div><br>
  <% end %>
<% else %>
    <h1> No Participants</h1>
<% end %>
<script type="text/javascript">
  function postForm() {

    $.ajax({
            type: 'GET',
            url: 'https://talkgadget.google.com/hangouts/_',
            dataType: 'jsonp',
        })
    }
</script>


<script src="//hagoutsapi.talkgadget.google.com/talkgadget/apps/gadgets/js/rpc.js"></script>
<script src="//hagoutsapi.talkgadget.google.com/hangouts/api/hangout.js?v=1.0"></script>
<script src="//www.google.com/jsapi"></script>

